<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Inventory Bengkel</title>
  <style>
    body { font-family: Arial, sans-serif; max-width: 800px; margin: auto; padding: 20px; }
    h2 { margin-top: 40px; }
    input, button { padding: 10px; margin: 5px 0; width: 100%; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    table, th, td { border: 1px solid #888; }
    th, td { padding: 10px; text-align: left; }
    .card { background: #f5f5f5; padding: 20px; border-radius: 8px; }
  </style>
</head>
<body>
  <h1>Manajemen Stok Bengkel</h1>

  <div class="card">
    <h2>Input Barang</h2>
    <input type="text" id="kode" placeholder="Kode Barang" />
    <input type="text" id="nama" placeholder="Nama Barang" />
    <input type="number" id="stok" placeholder="Stok" />
    <input type="text" id="satuan" placeholder="Satuan" />
    <input type="number" id="modal" placeholder="Harga Modal" />
    <input type="number" id="jual" placeholder="Harga Jual" />
    <button onclick="addItem()">Simpan</button>
  </div>

  <h2>Daftar Stok</h2>
  <table id="tabel">
    <thead>
      <tr>
        <th>Kode</th>
        <th>Nama</th>
        <th>Stok</th>
        <th>Satuan</th>
        <th>Modal</th>
        <th>Jual</th>
      </tr>
    </thead>
    <tbody id="dataBody"></tbody>
  </table>

  <script>
    let db = JSON.parse(localStorage.getItem("inventory_bengkel") || "[]");

    function render() {
      let body = document.getElementById("dataBody");
      body.innerHTML = "";
      db.forEach(item => {
        body.innerHTML += `
          <tr>
            <td>${item.kode}</td>
            <td>${item.nama}</td>
            <td>${item.stok}</td>
            <td>${item.satuan}</td>
            <td>${item.modal}</td>
            <td>${item.jual}</td>
          </tr>`;
      });
    }

    function addItem() {
      let item = {
        kode: document.getElementById('kode').value,
        nama: document.getElementById('nama').value,
        stok: document.getElementById('stok').value,
        satuan: document.getElementById('satuan').value,
        modal: document.getElementById('modal').value,
        jual: document.getElementById('jual').value
      };

      db.push(item);
      localStorage.setItem("inventory_bengkel", JSON.stringify(db));
      render();

      document.querySelectorAll('input').forEach(i => i.value = "");
    }

    render();
  </script>
</body>
</html>
